	<section  id="table-users">

		<table class="table table-hover table-bordered table-striped" id="admin-categories">

			<thead>
			    <tr>
			      <th scope="col">Catégorie</th>
			      <th scope="col" class="intrm">Nbre de sujets</th>
			      <th scope="col" class="intrm">Date de création</th>
			      <th scope="col">Suppression</th>
			    </tr>
		  	</thead>

		  	<tbody>
				{% for category in categories %}
				<tr>
				     <th scope="row"><a href="{{ path('forum_category',{'slug':category.slug}) }}">{{ category.category }}</a></th>
				     <td class="text-primary intrm">{{ category.topics | length }}</td>
				     <td class="text-primary intrm">{{ category.createdAt | date('d/m/Y')  }} à {{category.createdAt | date('H:i') }}</td>
				     <td class="admin-action-button">
				        <a class="admin-remove" href="{{ path('admin_category_remove',{'id':category.id}) }}">Supprimer</a>
				     </td>
									     
				</tr>
				{% endfor %}

			</tbody>

		</table>

		<div class="navigation-admin">
   			 {{ knp_pagination_render(refPaginator) }}				  
		</div>	


		{# formulaire de création d'une catégorie #}
		<div class="mt-3 mb-4 rounded">
			<h4 class="text-white">Ajouter une catégorie : </h4>
			{{ form_start(categoryForm) }}

				{{ form_row(categoryForm.category,{
					'attr':{
						'value':''
					}
				}) }}

				<button type="submit" class="btn btn-success">Ajouter</button>
				
			{{ form_end(categoryForm) }}

		</div>		
					
	</section>


		