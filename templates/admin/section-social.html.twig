		<section  id="table-users">

			<div class="mt-3">

				<p><a href="https://fontawesome.com/icons" target="_blank">Icônes FontAwesome</a></p>

				<form method="post" id="social-admin">
				
					{% for reseau in reseaux %}

					  <fieldset class="pb-4">
						  <legend class="text-white pl-2">{{ reseau.name }}</legend>
						  <div class="form-row">
						    <div class="form-group col-md-6">
						      <label for="url-{{reseau.id}}" class="text-white">URL</label>
						      <input type="url" class="form-control" id="url-{{reseau.id}}" placeholder="url ..." value="{{ reseau.url }}" name="url-{{reseau.id}}">
						    </div>
						    <div class="form-group col-md-6">
						      <label for="logo-{{reseau.id}}" class="text-white">Fontawesome</label>
						      <input type="text" class="form-control" id="logo-{{reseau.id}}" placeholder="balise fontawesome ..." value="{{ reseau.fontawesome }}" name="logo-{{reseau.id}}">
						    </div>
						  </div>	
						</fieldset>	

					{% endfor %}

					<div>
						<button type="submit" class="btn btn-success">Modifier</button>
						<span class="text-white ml-4 p-2" id="confirm-social">Mise à jour effectuée</span>
					</div>

				</form>

			</div>		
					
		</section>