{% extends 'profil/base-tab.html.twig' %}

{% block content %}	

	<div class="tab-content mt-2" id="box-mail">

		<h4>{{ infosNbMails }}</h4>

		<div class="mt-4 mb-4">
			<a class="btn btn-success" href="{{ path('profil_conversations_create') }}">Nouveau message</a>

			<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal">Supprimer tous les messages</button>
		</div>

		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title" id="exampleModalLabel">Suppression des messages</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body">
		        Voulez-vous supprimer définitivement tous les messages reçus et envoyés ?
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
		        <a type="button" class="btn btn-warning" id="supp-talk" href="{{ path('profil_conversations_all_remove') }}">Supprimer</a>
		      </div>
		    </div>
		  </div>
		</div>

		{#----------------------------------------------------------------------------------#}
		{% block subcontent %}	
		{% endblock %}
		{#----------------------------------------------------------------------------------#}

	</div>


{% endblock %}
